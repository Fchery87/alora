# Convex (public)
EXPO_PUBLIC_CONVEX_DEPLOYMENT=https://YOUR_DEPLOYMENT_NAME.convex.cloud
EXPO_PUBLIC_CONVEX_URL=https://YOUR_DEPLOYMENT_NAME.convex.cloud

# Convex dev tooling (local only)
CONVEX_DEPLOYMENT=dev:YOUR_DEPLOYMENT_NAME

# Clerk (public + server)
EXPO_PUBLIC_CLERK_PUBLISHABLE_KEY=pk_test_...
CLERK_SECRET_KEY=sk_test_...
CLERK_JWT_ISSUER_DOMAIN=https://YOUR_DOMAIN.clerk.accounts.dev
CLERK_WEBHOOK_SECRET=whsec_...

# App auth/session
AUTH_SECRET=YOUR_64_CHAR_HEX_HERE

# Sentry Error Tracking (optional but recommended for production)
# Get your DSN from: https://sentry.io/settings/projects/YOUR_PROJECT/keys/
EXPO_PUBLIC_SENTRY_DSN=https://YOUR_KEY@YOUR_PROJECT.ingest.sentry.io/YOUR_PROJECT_ID
